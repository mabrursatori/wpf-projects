<Window x:Class="WpfTutorialSamples.User_Controls.LimitedInputSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTutorialSamples.User_Controls"
        xmlns:uc="clr-namespace:WpfTutorialSamples.User_Controls"
        mc:Ignorable="d"
        Title="LimitedInputSample" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <local:LimitedInputUserControl  Height="50" />
        <uc:LimitedInputUserControl  Grid.Row="1" />

    </Grid>
</Window>
